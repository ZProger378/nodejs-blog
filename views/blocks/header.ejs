<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.css">
<link rel="stylesheet" href="styles/header.css">
<script src="https://code.jquery.com/jquery-3.6.3.js"></script>
<script src="js/dropdown-handler.js"></script>
<header class="container p-3 mb-4">
    <nav class="navbar">
        <ul class="nav-ul">
            <li class="nav-item link"><a class="nav-link" href="/">Домашняя страница</a></li>
            <li class="nav-item link"><a class="nav-link" href="/new">Новые статьи</a></li>
            <li class="nav-item link"><a class="nav-link" href="/about">О нас</a></li>
        </ul>
        <% if (!is_auth) { %> 
            <ul class="btn-ul">
                <li class="nav-item"><a class="btn btn-primary login-btn" href="/login">Войти</a></li>
                <li class="nav-item"><a class="btn btn-primary reg-btn" href="/reg">Зарегистрироваться</a></li>
            </ul>   
        <% } else { %>
            <div class="btn-group">
                <button type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                  Пользователь <%- username %> 
                </button>
                <ul class="dropdown-menu" style="margin-top: 40px;">
                  <li><a class="dropdown-item username"><%- username %></a></li>
                  <li><a class="dropdown-item" href="/create_article">Создать статью</a></li>
                  <li><hr class="dropdown-divider"></li>
                  <li><a class="dropdown-item" href="/logout">Выйти с аккаунта</a></li>
                </ul>
            </div>              
        <% } %> 
    </nav>
</header>